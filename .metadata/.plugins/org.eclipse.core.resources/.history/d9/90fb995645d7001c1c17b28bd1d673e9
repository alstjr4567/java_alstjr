
public class Ex04_02_1Â÷¿ø {

	public static void main(String[] args) {
		
		int[] score = {79,88,91,33,100,55,95};
		System.out.println(score.length); // 7
		
		int i,sum=0;
		for(i=0;i<score.length;i++) {
			System.out.print(score[i] + " ");
			sum = sum + score[i];
		}
		System.out.println();
		System.out.println("sum:" + sum);
		System.out.println("Æò±Õ"+sum/score.length);
		
		System.out.println("==============");
		sum=0;
		for(int t : score) {
			System.out.print(t+" ");
			sum = sum + t;
		}
		System.out.println();
		System.out.println("sum:" + sum);
		System.out.println();
		
	}//main

}
