
public class Ex02_03_증감 {
	public static void main(String[] args) {
		
		int a=5,aa, b=5,bb;
		
		//++ : 1증가시키는 연산자
		aa = ++a;  //앞:먼저  
		
		bb = b++;  //뒤:나중에
		
		
		System.out.println("a:"+a);
		System.out.println("aa:"+aa);
		
		System.out.println("b:"+b);
		System.out.println("b:"+bb);
		
	}

}
