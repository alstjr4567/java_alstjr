class Var{
	static int a;
	int b;
	void increment() {
		int c=0;
		a++;
		b++;
		c++;
		System.out.println("a:"+a);
		System.out.println("b:"+b);
		System.out.println("c:"+c);
	}
}//Var

//class는 동네 다른동네 있는 메서드를 호출할때는 객체를 만들어라

public class Ex05_07_변수 {

	public static void main(String[] args) {
		
		//호출
		Var v = new Var();//객체
		v.increment();
		
	}

}
