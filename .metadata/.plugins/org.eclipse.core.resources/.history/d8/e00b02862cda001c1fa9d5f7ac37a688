import java.util.Scanner;

public class Ex04_08_김민석 {

	public static void main(String[] args) {
		
		int studentNum , i , number;
		int sum = 0 , avg = 0 , max , min;
		int[] score = null;//공간이 만들어지기 전이다 null
		int[] scores = new int[5];
		

		Scanner sc = new Scanner(System.in);
		while(true) {

			System.out.println("1.학생수|2.점수입력|3.점수리스트|4.분석|5.종료");
			System.out.print("선택>");
			int num = sc.nextInt();
			
			if(num == 1) {
				System.out.print("1.학생수 입력>");
				studentNum = sc.nextInt();
				score = new int[studentNum];
				
			}
			else if(num == 2) {
				System.out.println("2.점수입력");
				for(i=0;i<score.length;i++) {
					System.out.print("점수 :");
					score[i] = sc.nextInt();
				}
				if(score == null) {
					System.out.println("1번 먼저 진행하세요");
					continue;
				}
				
				
			}
			else if(num == 3) {
				System.out.println("3.점수리스트");
				if(score == null) {
					System.out.println("1번 먼저 진행하세요");
					continue;
				}
			
				for(i=0;i<score.length;i++) {
					System.out.println(score[i]+" ");
					
				}
			}
			
			else if(num == 4) {
				System.out.println("4.분석");
				max = score[0];
				min = score[0];
				for(i=1; i<score.length; i++) {
					if (max < score[i])
						max = score[i];
					if (min > score[i])
						min = score[i];
				}
				
				System.out.println("최고점수 : " + max);
				System.out.println("최하점수 : " + min);
				for(int x : score) {
					sum = sum + x;
				}
				System.out.println("합계 : " + sum);
				System.out.println("평균 : " + sum / score.length);
				System.out.println();
				if(score == null) {
					System.out.println("1번 먼저 진행하세요");
					continue;
				}
			}
				
			else if(num == 5) {
				System.out.println("5.종료");
				break;
			}
			else {
				System.out.println("1~5사이의 번호만 선택 가능합니다.");
			}
		} //while
		
		System.out.println("프로그램을 종료합니다.");
	}//main
}

